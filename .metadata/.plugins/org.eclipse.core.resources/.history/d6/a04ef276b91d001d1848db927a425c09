		 dataNascimento.setTime(setDataNascimento);  
		    cData.set(Calendar.YEAR, cHoje.get(Calendar.YEAR));  
		    
		    int idade = cData.after(cHoje) ? -1 : 0;  
		    cData.setTime(nasc);  
		    
		    idade += cHoje.get(Calendar.YEAR) - cData.get(Calendar.YEAR);  
			
		    return idade;
